class Hole {
  Vec2 pos;
  float radius = 30;

  //------------------------------------------------------------------------------------------------------------------------------------------------------------------
  //constructor
  Hole(int x, int y) {
    pos = new Vec2(x, y);
  }
  //------------------------------------------------------------------------------------------------------------------------------------------------------------------
  //draw a black circle representing the hole
  void show() {
    fill(0);
    stroke(0);
    ellipse(pos.x, pos.y, radius, radius);
  }
}